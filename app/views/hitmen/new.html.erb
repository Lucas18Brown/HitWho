<%= simple_form_for @hitman do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :method, collection: %w[gun punch car superpower knife fatality poison] %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %> <!-- To upload profile photo -->
  <%= f.submit %>
<% end %>
